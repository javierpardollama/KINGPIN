{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=kingpin.db"
  },
  "AllowedHosts": "*",
  "Jwt": {
    "JwtKey": "SOME_RANDOM_KEY_DO_NOT_SHARE",
    "JwtIssuer": "http://localhost:15208/",
    "JwtAudience": "http://localhost:4200",
    "JwtExpireDays": 30
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": "Information",
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "C:\\PERSONAL\\MY SOURCE\\KINGPIN\\Kingpin.Portal\\Kingpin.Tier.Web\\Kingpin.Log",
          "fileSizeLimitBytes": 100000,
          "rollOnFileSizeLimit": true,
          "shared": true,
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ]
  }
}